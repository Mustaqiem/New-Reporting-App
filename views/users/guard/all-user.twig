
{% extends 'templates/default.twig' %}

{% block title %}List Anak{% endblock %}

{% block current %} List Anak{% endblock %}

{% block content %}

<div class="panel panel-default">
    <a class="list-group-item active main-color-bg">
      <span align="center" aria-hidden="true">
          <i class="icon-file"></i></span> List Anak
    </a>
    <div class="panel-body">
    {% for data in data %}       
         <div class="col-sm-6 col-md-6 col-lg-3 mt-4">
                <div class="card">
                    <img class="card-img-top" src=" {{base_url()}}/assets/images/{{data.image}}" >
                    <div class="card-block">
                        <h4 class="card-title">{{data.name}}</h4>
                        <div class="meta">
                            <a href="#">Anak</a>
                        </div>
                        <div class="card-text">
                            {{data.address}}
                        </div>
                    </div>
                    <div class="card-footer">
                        <span><i class=""></i>{{data.phone}}</span><br>
                    </div>
                </div>
                <br>
            </div>
    {% endfor %}
    </div>
</div>

{% endblock %}
